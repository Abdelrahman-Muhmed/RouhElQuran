@model Core.Dto_s.InstructorDto;


<!-- Header Section -->
<div class="row mb-4">
    <div class="col-12">
        <div class="card shadow-sm">
            <div class="card-header d-flex flex-column flex-md-row justify-content-between align-items-center py-3">
                <h5 class="card-title mb-2 mb-md-0 d-flex align-items-center">
                    <i class="bx bx-user-plus me-2"></i>
                   Add Instructor
                </h5>
            </div>
        </div>
    </div>
</div>

<form id="InstructorCreateEditFormId" class="form-section">
    <!-- Details-->
    <input type="number" asp-for="Id" hidden="hidden" id="insId" />
    
    <div class="col-12">
        <h6 class="text-start section-title">
            <i class="bx bx-user-detail"></i>
            1. Instructor Details
        </h6>
    </div>
    
    <div class="row mb-3">
        <div class="col-md-12 form-control-validation fv-plugins-icon-container">
            <label class="form-label d-block text-start required-field" for="CoursesMultiSelectID">Course Name</label>
            <!--For Display Old Course   asp-for="CourseId"  -->
            <select data-multi-select
                    id="CoursesMultiSelectID"
                    asp-for="CourseId"
                    asp-items="@(ViewData["AllCourses"] as SelectList)"
                    multiple="multiple"
                    class="form-control rounded-3">
            </select>
            <div class="fv-plugins-message-container fv-plugins-message-container--enabled invalid-feedback"></div>
        </div>
    </div>
    
    <div class="row mb-3">
        <div class="col-md-6 form-control-validation fv-plugins-icon-container">
            <label class="form-label d-block text-start required-field" for="Salary">Salary</label>
            <div class="input-group">
                <span class="input-group-text">
                    <i class="bx bx-dollar"></i>
                </span>
                <input type="number" class="form-control" asp-for="Salary" name="Salary" id="SalaryId" placeholder="Enter instructor salary">
            </div>
            <div class="fv-plugins-message-container fv-plugins-message-container--enabled invalid-feedback"></div>
        </div>
        
        <div class="col-md-6 form-control-validation fv-plugins-icon-container">
            <label class="form-label d-block text-start required-field" for="InsName">Users</label>
            <select class="form-control rounded-3" asp-for="InsUser_Id" asp-items="@(ViewData["AllUser"] as SelectList)">
                <option value="">-- Select User --</option>
            </select>
            <div class="fv-plugins-message-container fv-plugins-message-container--enabled invalid-feedback"></div>
        </div>
    </div>
    
    <div class="row mb-3">
        <div class="col-md-12 form-control-validation fv-plugins-icon-container">
            <label class="form-label d-block text-start required-field" for="Certificate">Certificate</label>
            <textarea id="CertificateId" asp-for="Certificate" class="form-control" placeholder="Enter certificates and qualifications" name="Certificate"></textarea>
            <div class="fv-plugins-message-container fv-plugins-message-container--enabled invalid-feedback"></div>
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-md-6 form-control-validation fv-plugins-icon-container">
            <label class="form-label d-block text-start required-field" for="TimeWork">Time Work From :</label>
            <div class="input-group">
                <span class="input-group-text">
                    <i class="bx bx-time"></i>
                </span>
                <input type="time" id="TimeFromId" class="form-control" asp-for="TimeFrom">
            </div>
            <div class="fv-plugins-message-container fv-plugins-message-container--enabled invalid-feedback"></div>
        </div>
        <div class="col-md-6 form-control-validation fv-plugins-icon-container">
            <label class="form-label d-block text-start required-field" for="TimeWork">Time Work To :</label>
            <div class="input-group">
                <span class="input-group-text">
                    <i class="bx bx-time"></i>
                </span>
                <input type="time" id="TimeToId" class="form-control" asp-for="TimeTo">
            </div>
            <div class="fv-plugins-message-container fv-plugins-message-container--enabled invalid-feedback"></div>
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-md-12 form-control-validation fv-plugins-icon-container">
            <label class="form-label d-block text-start required-field" for="DaysWork">Days Work</label>
            <div class="input-group">
                <span class="input-group-text">
                    <i class="bx bx-calendar"></i>
                </span>
                <input type="text" class="form-control" id="DaysWorkId" asp-for="DaysWork" placeholder="e.g., Monday - Friday">
            </div>
            <div class="fv-plugins-message-container fv-plugins-message-container--enabled invalid-feedback"></div>
        </div>
    </div>

    <div class="row mb-3">

        <div class="col-md-6 form-control-validation fv-plugins-icon-container">
            <label class="form-label d-block text-start required-field" for="WorkExperienceFrom">Work Experience From: </label>
            <div class="input-group">
                <span class="input-group-text">
                    <i class="bx bx-calendar"></i>
                </span>
                <input type="date" class="form-control" id="WorkExperienceFromId" asp-for="WorkExperienceFrom">
            </div>
            <div class="fv-plugins-message-container fv-plugins-message-container--enabled invalid-feedback"></div>
        </div>

        <div class="col-md-6 form-control-validation fv-plugins-icon-container">
            <label class="form-label d-block text-start required-field" for="WorkExperienceTo">Work Experience To:</label>
            <div class="input-group">
                <span class="input-group-text">
                    <i class="bx bx-calendar"></i>
                </span>
                <input type="date" class="form-control" id="WorkExperienceToId" asp-for="WorkExperienceTo">
            </div>
            <div class="fv-plugins-message-container fv-plugins-message-container--enabled invalid-feedback"></div>
        </div>
    </div>
    <div class="row mb-4">
        <div class="col-md-6 form-control-validation fv-plugins-icon-container">
            <label class="form-label d-block text-start" for="formValidationName">Choose Youer File</label>
            <input asp-for="FileUpload.FormFile" type="file" class="form-control" id="fileId" placeholder="choose File" multiple />
            <div class="fv-plugins-message-container fv-plugins-message-container--enabled invalid-feedback"></div>
        </div>
        <div class="col-md-6 form-control-validation fv-plugins-icon-container">
            <label class="form-label d-block text-start" for="formValidationName">File Note</label>
            <input asp-for="FileUpload.Note" type="text" id="NoteId" class="form-control" placeholder="Wright Note"></input>
            <div class="fv-plugins-message-container fv-plugins-message-container--enabled invalid-feedback"></div>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-md-12 form-control-validation fv-plugins-icon-container">
            <label class="form-label d-block text-start required-field" for="Description">Description</label>
            <textarea id="DescriptionId" asp-for="Description" class="form-control" placeholder="Enter Description and qualifications" name="Description"></textarea>
            <div class="fv-plugins-message-container fv-plugins-message-container--enabled invalid-feedback"></div>
        </div>
    </div>
    
    <div class="fv-plugins-message-container fv-plugins-message-container--enabled invalid-feedback"></div>
</form>
<div class="col-12 form-control-validation">
	<button type="button" name="submitButton" onclick="submit('/Instructor/CreateEdit', 'InstructorCreateEditFormId')" class="btn btn-primary">Submit</button>
</div>

