@model IEnumerable<Core.Dto_s.InstructorCoursesDto>

    @{
        var data = Model.FirstOrDefault();
    }
    <style>
        body {
            background-color: #f8f9fa;
        }

        .card {
            border: none;
            box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
            border-radius: 0.5rem;
        }

        .card-header {
            background: linear-gradient(135deg, #667eea 0%, #1976d2 100%);
            color: white;
            border-radius: 0.5rem 0.5rem 0 0 !important;
            border: none;
            border-bottom: 2px solid #1565c0;
        }

            .card-header .card-title {
                color: white;
                font-weight: 600;
            }

            .card-header i {
                color: #f0f8ff;
            }

        .btn-primary {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border: none;
            color: white;
        }

            .btn-primary:hover {
                background: linear-gradient(135deg, #5a6fd8 0%, #6a4190 100%);
                transform: translateY(-1px);
            }

        .btn-secondary {
            background: linear-gradient(135deg, #74b9ff 0%, #0984e3 100%);
            border: none;
            color: white;
        }

            .btn-secondary:hover {
                background: linear-gradient(135deg, #6baff5 0%, #0770c1 100%);
                transform: translateY(-1px);
            }

        .btn-outline-primary {
            border-color: #667eea;
            color: #667eea;
        }

            .btn-outline-primary:hover {
                background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
                border-color: #667eea;
            }

        .badge {
            font-weight: 500;
            padding: 0.5em 0.75em;
        }

        .profile-avatar {
            width: 120px;
            height: 120px;
            border: 4px solid #dee2e6;
            transition: border-color 0.3s ease;
            box-shadow: 0 0.25rem 0.5rem rgba(0, 0, 0, 0.1);
        }

            .profile-avatar:hover {
                border-color: #667eea;
            }

        .info-card {
            background: linear-gradient(135deg, #ffffff 0%, #f8f9fa 100%);
            border: 1px solid #e9ecef;
            transition: all 0.3s ease;
        }

            .info-card:hover {
                transform: translateY(-2px);
                box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
            }

            .info-card .card-header {
                background: linear-gradient(135deg, #fafafa 0%, #f0f0f0 100%);
                color: #424242;
                border-bottom: 1px solid #e0e0e0;
            }

            .info-card .card-title {
                color: #1976d2 !important;
                font-size: 1.1rem;
            }

            .info-card i {
                color: #1976d2 !important;
            }

        .info-label {
            font-weight: 600;
            color: #495057;
            margin-bottom: 0.25rem;
        }

        .info-value {
            color: #6c757d;
            font-size: 0.95rem;
        }

        .salary-text {
            font-weight: 700;
            color: #28a745;
            font-size: 1.25rem;
        }

        .status-active {
            background: linear-gradient(135deg, #28a745 0%, #20c997 100%);
        }

        .status-pending {
            background: linear-gradient(135deg, #ffc107 0%, #fd7e14 100%);
        }

        .status-inactive {
            background: linear-gradient(135deg, #dc3545 0%, #e83e8c 100%);
        }

        .certificate-badge {
            background: linear-gradient(135deg, #17a2b8 0%, #6f42c1 100%);
        }

        .course-badge {
            background: linear-gradient(135deg, #6f42c1 0%, #e83e8c 100%);
            margin: 0.125rem;
        }

        .breadcrumb {
            background: transparent;
            padding: 0;
        }

        .breadcrumb-item + .breadcrumb-item::before {
            color: #6c757d;
        }

        .breadcrumb-item.active {
            color: #667eea;
        }

        .experience-timeline {
            border-left: 2px solid #667eea;
            padding-left: 1rem;
            margin-left: 0.5rem;
        }

        .timeline-item {
            position: relative;
            padding-bottom: 1rem;
        }

            .timeline-item::before {
                content: '';
                position: absolute;
                left: -1.375rem;
                top: 0.25rem;
                width: 0.75rem;
                height: 0.75rem;
                background: #667eea;
                border-radius: 50%;
                border: 2px solid white;
                box-shadow: 0 0 0 2px #667eea;
            }

        .work-schedule-card {
            background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
            border: 1px solid #dee2e6;
            border-radius: 0.5rem;
            padding: 1rem;
        }

        .schedule-day {
            background: white;
            border: 1px solid #dee2e6;
            border-radius: 0.25rem;
            padding: 0.5rem;
            margin: 0.25rem 0;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

            .schedule-day.active {
                background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
                color: white;
                border-color: #667eea;
            }

      
    </style>

    <div class="container-fluid p-4">
  
        <!-- Header Section -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="card shadow-sm">
                    <div class="card-header d-flex flex-column flex-md-row justify-content-between align-items-center py-3">
                        <h5 class="card-title mb-2 mb-md-0 d-flex align-items-center">
                            <i class="bx bx-user-detail me-2 fs-4"></i>
                            Instructor Profile
                        </h5>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <!-- Profile Summary -->
            <div class="col-lg-4 mb-4">
                <div class="card info-card shadow-sm">
                    <div class="card-body text-center">
                        <img src="https://via.placeholder.com/120" alt="Instructor Avatar" class="profile-avatar rounded-circle mb-3">
                        <h4 class="mb-1">@data?.instructorDtos.InsName</h4>
                        <p class="text-muted mb-2">@data?.instructorDtos.InsEmail</p>
                        <p class="text-muted mb-3">Senior Mathematics Instructor</p>
                        <div class="d-flex justify-content-center mb-3">
                            <span class="badge status-active text-white fs-6">Active</span>
                        </div>
                        <div class="salary-text mb-3">$@data.instructorDtos.Salary</div>
                        <div class="d-flex justify-content-center gap-2">
                            <button class="btn btn-primary btn-sm">
                                <i class="bx bx-message-dots"></i> Message
                            </button>
                            <button class="btn btn-outline-primary btn-sm">
                                <i class="bx bx-phone"></i> Call
                            </button>
                        </div>
                    </div>
                </div>

                <!-- Quick Stats -->
                <div class="card info-card shadow-sm mt-4">
                    <div class="card-header">
                        <h6 class="card-title mb-0 d-flex align-items-center">
                            <i class="bx bx-stats me-2"></i>
                            Quick Stats
                        </h6>
                    </div>
                    <div class="card-body p-4">
                        <div class="row text-center">
                            <div class="col-6 mb-3">
                                <div class="info-label">Years Experience</div>
                                <div class="info-value fs-4 fw-bold text-primary">8</div>
                            </div>
                            <div class="col-6 mb-3">
                                <div class="info-label">Active Courses</div>
                                <div class="info-value fs-4 fw-bold text-success">3</div>
                            </div>
                            <div class="col-6">
                                <div class="info-label">Students</div>
                                <div class="info-value fs-4 fw-bold text-info">156</div>
                            </div>
                            <div class="col-6">
                                <div class="info-label">Rating</div>
                                <div class="info-value fs-4 fw-bold text-warning">4.8</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Detailed Information -->
            <div class="col-lg-8">
                <div class="row">
                    <!-- Personal Information -->
                    <div class="col-12 mb-4">
                        <div class="card info-card shadow-sm">
                            <div class="card-header">
                                <h6 class="card-title mb-0 d-flex align-items-center">
                                    <i class="bx bx-user me-2"></i>
                                    Personal Information
                                </h6>
                            </div>
                            <div class="card-body p-4">
                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <div class="info-label">Full Name</div>
                                        <div class="info-value">@data?.instructorDtos.InsName</div>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <div class="info-label">Email Address</div>
                                        <div class="info-value">@data.instructorDtos.InsEmail</div>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <div class="info-label">Phone Number</div>
                                        <div class="info-value">+1 (555) 123-4567</div>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <div class="info-label">Employee ID</div>
                                        <div class="info-value">INS-2024-001</div>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <div class="info-label">Department</div>
                                        <div class="info-value">Mathematics Department</div>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <div class="info-label">Hire Date</div>
                                        <div class="info-value">January 15, 2018</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Courses & Salary -->
                    <div class="col-md-6 mb-4">
                        <div class="card info-card shadow-sm h-100">
                            <div class="card-header">
                                <h6 class="card-title mb-0 d-flex align-items-center">
                                    <i class="bx bx-book me-2"></i>
                                    Current Courses
                                </h6>
                            </div>
                            <div class="card-body p-4">
                                <div class="mb-3">
                                @foreach(var item in data.courseDtos)
                                {
                                    <span class="badge course-badge text-white">@item.CrsName</span>

                                }
                            
                                </div>
                                <div class="info-label">Annual Salary</div>
                                <div class="salary-text">$75,000</div>
                                <small class="text-muted">Last updated: June 2025</small>
                            </div>
                        </div>
                    </div>

                    <!-- Work Schedule -->
                    <div class="col-md-6 mb-4">
                        <div class="card info-card shadow-sm h-100">
                            <div class="card-header">
                                <h6 class="card-title mb-0 d-flex align-items-center">
                                    <i class="bx bx-time me-2"></i>
                                    Work Schedule
                                </h6>
                            </div>
                            <div class="card-body p-4">
                                <div class="work-schedule-card">
                                    <div class="info-label mb-2">Working Hours</div>
                                    <div class="info-value mb-3">@data.instructorDtos.TimeFrom - @data.instructorDtos.TimeTo</div>

                                    <div class="info-label mb-2">Working Days</div>
                                    <div class="schedule-day active">
                                        <span>@data.instructorDtos.DaysWork</span>
                                        <i class="bx bx-check-circle"></i>
                                    </div>
                                    <div class="schedule-day">
                                        <span>Saturday - Sunday</span>
                                        <i class="bx bx-x-circle text-muted"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Certificates & Qualifications -->
                    <div class="col-12 mb-4">
                        <div class="card info-card shadow-sm">
                            <div class="card-header">
                                <h6 class="card-title mb-0 d-flex align-items-center">
                                    <i class="bx bx-award me-2"></i>
                                    Certificates & Qualifications
                                </h6>
                            </div>
                            <div class="card-body p-4">
                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <span class="badge certificate-badge text-white me-2">Ph.D. Mathematics</span>
                                        <span class="badge certificate-badge text-white me-2 mt-3">M.Sc. Applied Mathematics</span>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <span class="badge certificate-badge text-white me-2">Teaching Certificate</span>
                                        <span class="badge certificate-badge text-white me-2 mt-3">Research Methodology</span>
                                    </div>
                                </div>
                                <div class="mt-3">
                                    <div class="info-label">Additional Information</div>
                                    <div class="info-value">
                                        Specialized in Advanced Calculus and Statistical Analysis. Published researcher with 15+ academic papers.
                                        Certified in modern teaching methodologies and digital education platforms.
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Work Experience -->
                    <div class="col-12 mb-4">
                        <div class="card info-card shadow-sm">
                            <div class="card-header">
                                <h6 class="card-title mb-0 d-flex align-items-center">
                                    <i class="bx bx-briefcase me-2"></i>
                                    Work Experience
                                </h6>
                            </div>
                            <div class="card-body p-4">
                                <div class="experience-timeline">
                                    <div class="timeline-item">
                                        <div class="info-label">Senior Mathematics Instructor</div>
                                        <div class="info-value">January 2018 - Present</div>
                                        <small class="text-muted">Current Institution</small>
                                    </div>
                                    <div class="timeline-item">
                                        <div class="info-label">Mathematics Instructor</div>
                                        <div class="info-value">August 2015 - December 2017</div>
                                        <small class="text-muted">Previous Institution</small>
                                    </div>
                                    <div class="timeline-item">
                                        <div class="info-label">Graduate Teaching Assistant</div>
                                        <div class="info-value">September 2013 - July 2015</div>
                                        <small class="text-muted">University Research</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

