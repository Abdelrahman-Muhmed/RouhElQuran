@model Core.Dto_s.InstructorDto



    <div class="container-fluid p-4">
  
        <!-- Header Section -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="card shadow-sm">
                    <div class="card-header d-flex flex-column flex-md-row justify-content-between align-items-center py-3">
                        <h5 class="card-title mb-2 mb-md-0 d-flex align-items-center">
                            <i class="bx bx-user-detail me-2 fs-4"></i>
                            Instructor Profile
                        </h5>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <!-- Profile Summary -->
            <div class="col-lg-4 mb-4">
                <div class="card info-card shadow-sm">
                    <div class="card-body text-center">
                        <img src="https://via.placeholder.com/120" alt="Instructor Avatar" class="profile-avatar rounded-circle mb-3">
                        <h4 class="mb-1">@Model?.InstructorFirstName</h4>
                    <p class="text-muted mb-2">@Model?.InstructorEmail</p>
                        <p class="text-muted mb-3">Senior Mathematics Instructor</p>
                        <div class="d-flex justify-content-center mb-3">
                            <span class="badge status-active text-white fs-6">Active</span>
                        </div>
                    <div class="salary-text mb-3">$@Model.Salary</div>
                        <div class="d-flex justify-content-center gap-2">
                            <button class="btn btn-primary btn-sm">
                                <i class="bx bx-message-dots"></i> Message
                            </button>
                            <button class="btn btn-outline-primary btn-sm">
                                <i class="bx bx-phone"></i> Call
                            </button>
                        </div>
                    </div>
                </div>

                <!-- Quick Stats -->
                <div class="card info-card shadow-sm mt-4">
                    <div class="card-header">
                        <h6 class="card-title mb-0 d-flex align-items-center">
                            <i class="bx bx-stats me-2"></i>
                            Quick Stats
                        </h6>
                    </div>
                    <div class="card-body p-4">
                        <div class="row text-center">
                            <div class="col-6 mb-3">
                                <div class="info-label">Years Experience</div>
                                <div class="info-value fs-4 fw-bold text-primary">8</div>
                            </div>
                            <div class="col-6 mb-3">
                                <div class="info-label">Active Courses</div>
                                <div class="info-value fs-4 fw-bold text-success">3</div>
                            </div>
                            <div class="col-6">
                                <div class="info-label">Students</div>
                                <div class="info-value fs-4 fw-bold text-info">156</div>
                            </div>
                            <div class="col-6">
                                <div class="info-label">Rating</div>
                                <div class="info-value fs-4 fw-bold text-warning">4.8</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Detailed Information -->
            <div class="col-lg-8">
                <div class="row">
                    <!-- Personal Information -->
                    <div class="col-12 mb-4">
                        <div class="card info-card shadow-sm">
                            <div class="card-header">
                                <h6 class="card-title mb-0 d-flex align-items-center">
                                    <i class="bx bx-user me-2"></i>
                                    Personal Information
                                </h6>
                            </div>
                            <div class="card-body p-4">
                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <div class="info-label">Full Name</div>
                                        <div class="info-value">@Model?.InstructorFirstName</div>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <div class="info-label">Email Address</div>
                                        <div class="info-value">@Model?.InstructorEmail</div>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <div class="info-label">Phone Number</div>
                                        <div class="info-value">+1 (555) 123-4567</div>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <div class="info-label">Employee ID</div>
                                        <div class="info-value">INS-2024-001</div>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <div class="info-label">Department</div>
                                        <div class="info-value">Mathematics Department</div>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <div class="info-label">Hire Date</div>
                                        <div class="info-value">January 15, 2018</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Courses & Salary -->
                    <div class="col-md-6 mb-4">
                        <div class="card info-card shadow-sm h-100">
                            <div class="card-header">
                                <h6 class="card-title mb-0 d-flex align-items-center">
                                    <i class="bx bx-book me-2"></i>
                                    Current Courses
                                </h6>
                            </div>
                            <div class="card-body p-4">
                                <div class="mb-3">
                                @foreach(var item in Model?.CoursesName)
                                {
                                    <span class="badge course-badge text-white">@item</span>

                                }
                            
                                </div>
                                <div class="info-label">Annual Salary</div>
                                <div class="salary-text">$75,000</div>
                                <small class="text-muted">Last updated: June 2025</small>
                            </div>
                        </div>
                    </div>

                    <!-- Work Schedule -->
                    <div class="col-md-6 mb-4">
                        <div class="card info-card shadow-sm h-100">
                            <div class="card-header">
                                <h6 class="card-title mb-0 d-flex align-items-center">
                                    <i class="bx bx-time me-2"></i>
                                    Work Schedule
                                </h6>
                            </div>
                            <div class="card-body p-4">
                                <div class="work-schedule-card">
                                    <div class="info-label mb-2">Working Hours</div>
                                    <div class="info-value mb-3">@Model.TimeFrom - @Model.TimeTo</div>

                                    <div class="info-label mb-2">Working Days</div>
                                    <div class="schedule-day active">
                                        <span>@Model.DaysWork</span>
                                        <i class="bx bx-check-circle"></i>
                                    </div>
                                    <div class="schedule-day">
                                        <span>Saturday - Sunday</span>
                                        <i class="bx bx-x-circle text-muted"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Certificates & Qualifications -->
                    <div class="col-12 mb-4">
                        <div class="card info-card shadow-sm">
                            <div class="card-header">
                                <h6 class="card-title mb-0 d-flex align-items-center">
                                    <i class="bx bx-award me-2"></i>
                                    Certificates & Qualifications
                                </h6>
                            </div>
                            <div class="card-body p-4">
                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <span class="badge certificate-badge text-white me-2">Ph.D. Mathematics</span>
                                        <span class="badge certificate-badge text-white me-2 mt-3">M.Sc. Applied Mathematics</span>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <span class="badge certificate-badge text-white me-2">Teaching Certificate</span>
                                        <span class="badge certificate-badge text-white me-2 mt-3">Research Methodology</span>
                                    </div>
                                </div>
                                <div class="mt-3">
                                    <div class="info-label">Additional Information</div>
                                    <div class="info-value">
                                        Specialized in Advanced Calculus and Statistical Analysis. Published researcher with 15+ academic papers.
                                        Certified in modern teaching methodologies and digital education platforms.
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Work Experience -->
                    <div class="col-12 mb-4">
                        <div class="card info-card shadow-sm">
                            <div class="card-header">
                                <h6 class="card-title mb-0 d-flex align-items-center">
                                    <i class="bx bx-briefcase me-2"></i>
                                    Work Experience
                                </h6>
                            </div>
                            <div class="card-body p-4">
                                <div class="experience-timeline">
                                    <div class="timeline-item">
                                        <div class="info-label">Senior Mathematics Instructor</div>
                                        <div class="info-value">January 2018 - Present</div>
                                        <small class="text-muted">Current Institution</small>
                                    </div>
                                    <div class="timeline-item">
                                        <div class="info-label">Mathematics Instructor</div>
                                        <div class="info-value">August 2015 - December 2017</div>
                                        <small class="text-muted">Previous Institution</small>
                                    </div>
                                    <div class="timeline-item">
                                        <div class="info-label">Graduate Teaching Assistant</div>
                                        <div class="info-value">September 2013 - July 2015</div>
                                        <small class="text-muted">University Research</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

