@{
	TempData.Keep();
	string? currentPage = ViewContext.HttpContext.Request.Path;
}

<!-- Menu -->
@* ! Do this simple *@
<aside id="layout-menu" class="layout-menu menu-vertical menu bg-menu-theme">

	@* ! Hide app brand if navbar-full *@
	<div class='app-brand demo @((@ViewData["navbarFull"] != null && Convert.ToBoolean(@ViewData["navbarFull"])) ? "d-xl-none" : "")'>
		<a asp-controller="Dashboards" asp-action="Index" class="app-brand-link">
			<span class="app-brand-logo demo">
				@await Html.PartialAsync("../_Partials/_Macros")
			</span>
			<span class="app-brand-text demo menu-text fw-bold ms-2">@TempData.Peek("appName")</span>
		</a>

		<a href="javascript:void(0);" class="layout-menu-toggle menu-link text-large ms-auto d-block d-xl-none">
			<i class="bx bx-chevron-left bx-sm d-flex align-items-center justify-content-center"></i>
		</a>
	</div>

	<div class="menu-inner-shadow"></div>

	@* ! Full version menu-items *@
	<ul class="menu-inner py-1">
		<!-- Dashboards -->
		<li class='menu-item@(currentPage.EndsWith("/") || currentPage.StartsWith("/Dashboards/") ? " active open" : "")'>
			<a href="javascript:void(0);" class="menu-link menu-toggle">
				<i class="menu-icon tf-icons bx bx-home-smile"></i>
				<div class="text-truncate" data-i18n="Dashboards">Dashboards</div>
				<span class="badge rounded-pill bg-danger ms-auto">2</span>
			</a>
			<ul class="menu-sub">
				<li class='menu-item@(currentPage == "/" ? " active" : "")'>
					<a asp-controller="Home" asp-action="Index" class="menu-link">
						<div>Home</div>
					</a>
				</li>
				<li class='menu-item@(currentPage == "/Courses" ? " active" : "")'>
					<a asp-controller="Courses" asp-action="Index" target="_blank" class="menu-link">
						<div>Courses Home</div><div class="badge bg-label-primary fs-tiny rounded-pill ms-auto text-uppercase">Pro</div>
					</a>
				</li>
				<li class='menu-item@(currentPage == "/Instructor/InstructorHome" ? " active" : "")'>
					<a asp-controller="Instructor" asp-action="InstructorHome" target="_blank" class="menu-link">
						<div>Instructor Home</div><div class="badge bg-label-primary fs-tiny rounded-pill ms-auto text-uppercase">Pro</div>
					</a>
				</li>
			</ul>
		</li>
		<!-- Apps & Pages -->
		<li class="menu-header small text-uppercase">
			<span class="menu-header-text">Apps &amp; Pages</span>
		</li>

		<!-- Courses Pages  -->
		<li class='menu-item@(currentPage.StartsWith("/Courses") || currentPage.StartsWith("/GetAllDash") ? " active open" : "")'>
			<a href="javascript:void(0);" class="menu-link menu-toggle">
				<i class="menu-icon tf-icons bx bx-book-open"></i>
				<div>Courses</div>
			</a>
			<ul class="menu-sub">
				<li class='menu-item@(currentPage == "/Courses" ? " active" : "")'>
					<a asp-controller="Courses" asp-action="Index" class="menu-link">
						<div>Courses Home</div>
					</a>
				</li>
				<li class='menu-item@(currentPage == "/GetAllDash" ? " active" : "")'>
					<a asp-controller="Courses" asp-action="GetAllDash" class="menu-link">
						<div>All Courses Academy</div>
					</a>
				</li>
				<li class='menu-item@(currentPage == "/Pages/AccountSettingsConnections" ? " active" : "")'>
					<a asp-controller="Pages" asp-action="AccountSettingsConnections" class="menu-link">
						<div>Course Details</div>
					</a>
				</li>
			</ul>
		</li>

		<!-- Instructor Pages  -->
		<li class='menu-item@(currentPage.StartsWith("/Instructor/InstructorHome") ? " active open" : "")'>
			<a href="javascript:void(0);" class="menu-link menu-toggle">
				<i class="menu-icon tf-icons bx bx-chalkboard"></i>
				<div>Instructor</div>
			</a>
			<ul class="menu-sub">
				<li class='menu-item@(currentPage == "/Instructor/InstructorHome" ? " active" : "")'>
					<a asp-controller="Academy" asp-action="AcademyHome" class="menu-link">
						<div>Instructor Home</div>
					</a>
				</li>
				<li class='menu-item@(currentPage == "/Instructor/Index" ? " active" : "")'>
					<a asp-controller="Pages" asp-action="AccountSettingsNotifications" class="menu-link">
						<div>My All Courses</div>
					</a>
				</li>
				<li class='menu-item@(currentPage == "/Pages/AccountSettingsConnections" ? " active" : "")'>
					<a asp-controller="Pages" asp-action="AccountSettingsConnections" class="menu-link">
						<div>Course Details</div>
					</a>
				</li>
			</ul>
		</li>

	
		<!-- Auth -->
		<li class='menu-item@(currentPage.StartsWith("/Auth") ? " active open" : "")'>
			<a href="javascript:void(0);" class="menu-link menu-toggle">
				<i class="menu-icon tf-icons bx bx-lock-open-alt"></i>
				<div>Authentications</div>
			</a>
			<ul class="menu-sub">
				<li class='menu-item@(currentPage == "/Auth/LoginBasic" ? " active" : "")'>
					<a asp-controller="Auth" asp-action="LoginBasic" class="menu-link" target="_blank">
						<div>Login</div>
					</a>
				</li>
				<li class='menu-item@(currentPage == "/Auth/RegisterBasic" ? " active" : "")'>
					<a asp-controller="Auth" asp-action="RegisterBasic" class="menu-link" target="_blank">
						<div>Register</div>
					</a>
				</li>
				<li class='menu-item@(currentPage == "/Auth/ForgotPasswordBasic" ? " active" : "")'>
					<a asp-controller="Auth" asp-action="ForgotPasswordBasic" class="menu-link" target="_blank">
						<div>Forgot Password</div>
					</a>
				</li>
			</ul>
		</li>


	</ul>

</aside>
<!-- / Menu -->
