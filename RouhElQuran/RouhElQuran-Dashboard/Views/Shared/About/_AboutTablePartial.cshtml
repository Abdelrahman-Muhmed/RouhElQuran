@using System.IO
@model IEnumerable<string>

<div class="TableContainer" id="AboutTableContainer">
    <table class="table table-hover mb-0">
        <thead class="table-light">
            <tr>
                <th class="d-none d-md-table-cell border-0">
                    <input class="form-check-input" type="checkbox" id="selectAll">
                </th>
                <th class="border-0 sortable-header" data-column="Description">
                    About Description
                    <i class="bi bi-arrow-down-up sort-icon"></i>
                </th>
                <th>
                    About Video
                    <i class="bi bi-arrow-down-up sort-icon"></i>
                </th>
                <th class="border-0">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var fileName in Model)
            {
                <tr>
                    <td class="d-none d-md-table-cell">
                        <input class="form-check-input file-checkbox" type="checkbox" value="@fileName">
                    </td>
                    <td>
                        <small class="text-muted">@fileName</small>
                    </td>
                    <td>
                     
                            <video width="320" height="240" controls>
                                <source src="@Url.Action("GetFile", "About", new { fileName = fileName })" type="video/mp4" />
                                Your browser does not support the video tag.
                            </video>
                    
                    </td>
           
                </tr>
            }
        </tbody>
    </table>
</div>
